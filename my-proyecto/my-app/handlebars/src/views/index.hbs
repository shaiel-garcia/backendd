<div class="redirectBottom">
    <a href="/productos/create" class="btn btn-secondary btn-lg p-2 m-2">Crea un nuevo producto</a>
</div>

<h1 class="display-1 text-center textColor my-3">Lista de Productos</h1>

{{#if dataProducts}}
<table class="table table-dark table-hover align-middle">
    <thead>
        <tr>
            <th scope="col" class="text-center">Name</th>
            <th scope="col" class="text-center">Price</th>
            <th scope="col" class="text-center">Image</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        {{#each dataProducts}}
        <tr>
            <th scope="row" class="text-center">{{ nombre }}</th>
            <td class="text-center">$ {{ price }}</td>
            <td class="text-center">
                <img height="75px" width="120px" src={{ url }} alt={{ nombre }} />
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h2 class="display-5 text-center">Lista vacia</h2>
                <p class="lead">AÃºn no hay productos registrados</p>
            </div>
        </div>
    </div>
</div>
{{/if}}